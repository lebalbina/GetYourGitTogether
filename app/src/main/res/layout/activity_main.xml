<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/showToastBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toast_btn_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/showToastBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toast_btn_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/showToastBtn" />

    <Button
        android:id="@+id/showToastBtn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toast_btn_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/showToastBtn2" />

</androidx.constraintlayout.widget.ConstraintLayout>